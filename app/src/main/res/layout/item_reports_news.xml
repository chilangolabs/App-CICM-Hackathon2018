<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="45dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgItemReports"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_building" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="10dp">

            <com.chilangolabs.hackcicm.customelements.MontserratTextView
                android:id="@+id/txtItemReportsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:transitionName="@string/item_report_title_transitionname"
                app:fontM="Regular"
                tools:text="Edificio dañado" />

            <com.chilangolabs.hackcicm.customelements.MontserratTextView
                android:id="@+id/txtItemReportsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:fontM="Light"
                android:transitionName="@string/item_report_status_transitionname"
                tools:text="Estatus: en revisión" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>